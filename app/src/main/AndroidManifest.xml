<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="app.suhocki.mybooks">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".presentation.splash.SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.initial.InitialActivity"
            android:launchMode="singleTop"
            android:theme="@style/Dialog" />

        <activity android:name=".presentation.main.MainActivity" />

        <activity
            android:name=".presentation.books.BooksActivity"
            tools:targetApi="jelly_bean">
        </activity>

        <activity
            android:name=".presentation.details.DetailsActivity"
            android:parentActivityName=".presentation.books.BooksActivity"
            android:theme="@style/AppTheme.NoActionBar"
            tools:targetApi="jelly_bean">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".presentation.books.BooksActivity" />
        </activity>

        <service
            android:name=".presentation.background.BackgroundService"
            android:exported="false" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="f779c23c3f096ce55675eb5a228961f2811e8fa2" />
    </application>

</manifest>